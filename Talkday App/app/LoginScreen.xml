<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded" actionBarHidden="true">
    <GridLayout rows="100, 80, *, 100" class="login-screen-container" id="gridLoginContainer">
        <Label text="Talkday App" class="login-title" />
        <StackLayout row="2">
            <TextField id="tfUsername" hint="Enter your username" class="login-textfield" />
            <TextField id="tfPassword" secure="true" hint="Enter your password" text="" class="login-textfield" />
            <Button text="Login" class="login-button" tap="loginButtonTapped" id="loginButton" />
        </StackLayout>
    </GridLayout>
</Page>